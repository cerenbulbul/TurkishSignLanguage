<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ceren.turk_isaret_dili_egitimi.turk.example.ceren.turk_isaret_dili_egitimi.Splash"
    android:background="#EFF4F8">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:background="@drawable/baloon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Turk Isaret Dili Egitimi"
            android:textSize="20sp"
            android:textColor="#0B719E"
            android:textAlignment="center"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>