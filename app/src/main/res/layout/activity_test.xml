<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerTest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_gradient"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SINAV BASLASIN"
                android:textColor="#FFF"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:transitionName="image"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/circlet" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="182dp"
            android:layout_height="182dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-90dp"
            android:layout_marginBottom="-40dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/circle3"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-50dp"
            android:layout_marginBottom="-60dp"
            android:layout_toStartOf="@id/circle2"
            android:src="@drawable/circlet" />

        <RelativeLayout
            android:layout_below="@+id/headerTest"
            android:layout_above="@+id/bottom_buttons_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/wb"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/reload"
                        android:foreground="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans"
                        android:text="0"
                        android:textColor="#28A2CF"
                        android:textSize="30sp"/>

                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:orientation="vertical">

                            <Button
                                android:id="@id/button1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bgbtnguide"
                                android:layout_marginTop="10dp"
                                android:text=""
                                android:fontFamily="sans"
                                android:textColor="#FFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:foreground="?android:attr/selectableItemBackground"/>

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="sans"
                                android:textColor="#FFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:background="@drawable/bgbtnguide"
                                android:text=""
                                android:foreground="?android:attr/selectableItemBackground"/>

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="sans"
                                android:textColor="#FFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:background="@drawable/bgbtnguide"
                                android:text=""
                                android:foreground="?android:attr/selectableItemBackground"/>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_buttons_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/bgbtnguide"
                android:text="Tekrar Et"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:foreground="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bgbtnguide"
                android:text="Yeni Egitim"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:typeface="sans"
                android:foreground="?android:attr/selectableItemBackground"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>