<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="12dp"
                android:color="#3E000000" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="-1dp"
                android:top="-1dp" />
            <corners android:radius="12dp" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#fff" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>